map $http_upgrade $connection_upgrade {
    default upgrade;
    "" close;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name api.bwraap.com;

    client_max_body_size 32m;

    location /static/ {
        alias /var/www/AvtoBorsa/backend/staticfiles/;
        expires 30d;
        access_log off;
        add_header Cache-Control "public, max-age=2592000, immutable";
    }

    location /media/ {
        alias /var/www/AvtoBorsa/backend/media/;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # Admin (frontend on Vercel)
    location ^~ /admin/ {
        proxy_pass https://bwraap.com/admin/;
        proxy_set_header Host bwraap.com;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    # ако някой отвори точно /admin (без /)
    location = /admin {
        return 301 /admin/;
    }

    location /ws/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }
 location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
    }
}


